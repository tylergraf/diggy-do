<div class="page page-admin page-view-admin-add-kid admin-add">
  <%- include _modal-header.ejs %>
  <h3 class="heading-1" ng-show="type === 'add'">Add kid</h3>
  <h3 class="heading-1" ng-show="type === 'edit'">Edit kid</h3>
  <form ng-submit="saveKid(kid)" class="form form-add-kid form-add">
    <div class="input-wrapper">
      <input type="text" ng-model="kid.name" placeholder="Child's name">
    </div>
    <div class="input-wrapper">
      <input type="password" ng-model="kid.passcode" maxlength="4" pattern="\d*" placeholder="Enter a simple passcode (4 numbers long)">
    </div>
    <!-- <span class="btn btn-green">Set Avatar</span> -->

    <p class="avatar-color-label">Avatar Color</p>
    <section class="avatar-color-wrapper">
      <label for="green"><input checked="checked" id="green" value="green" ng-model="kid.avatar.color" type="radio" checked=true><span class="avatar avatar-green"><i class="icon icon-check hide"></i></span></label>
      <label for="red"><input id="red" value="red" ng-model="kid.avatar.color" type="radio"><span class="avatar avatar-red"><i class="icon icon-check hide"></i></span></label>
      <label for="blue"><input id="blue" value="blue" ng-model="kid.avatar.color" type="radio"><span class="avatar avatar-blue"><i class="icon icon-check hide"></i></span></label>
      <label for="yellow"><input id="yellow" value="yellow" ng-model="kid.avatar.color" type="radio"><span class="avatar avatar-yellow"><i class="icon icon-check hide"></i></span></label>
    </section>
    <p class="avatar-color-label">Avatar Icon</p>
    <section class="avatar-icon-wrapper">
      <span class="avatar avatar-{{kid.avatar.color}}"><i class="icon icon-{{kid.avatar.icon}}"></i></span>
      <span ng-tap="openAvatarChooser()" class="btn btn-blue">Choose Icon</span>
    </section>

    <!-- <section class="form-actions">
      <button ng-show="type === 'edit'" type="submit" class="btn btn-green">Save Kid</button>
      <a ng-show="type === 'edit'" ng-tap="navigate('LR','/admin-kids')" class="btn btn-orange">Cancel</a>
      <a ng-show="type === 'edit'" ng-tap="deleteKid(kid._id)" class="btn btn-red">Delete Kid</a>
      <button ng-show="type === 'add'" type="submit" class="btn btn-green">Add Kid</button>
    </section> -->
    <section class="submit-actions">
      <div class="submit-action">
        <span class="button-label">OK</span>
        <button type="submit" class="btn btn-green"><i class="icon icon-check"></i></button>
      </div>
      <div class="submit-action">
        <span class="button-label">Cancel</span>
        <a class="btn btn-orange" ng-tap="navigate('LR','/admin-kids')"><i class="icon icon-x"></i></a>
      </div>
      <div class="submit-action" ng-show="type === 'edit'">
        <span class="button-label">Delete</span>
        <a class="btn btn-red" ng-tap="deleteKid(kid._id)"><i class="icon icon-x"></i></a>
      </div>
    </section>
  </form>
</div>
    <dd-choose-avatar class="hide" current-icon="kid.avatar.icon">
